{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "target": "es6"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "typings/index.d.ts"
  ],
  "files": [
    "src/index.ts",
    "typings/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
